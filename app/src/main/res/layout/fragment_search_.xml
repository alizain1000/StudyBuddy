<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Search_Fragment">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="150dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
android:id="@+id/islamic"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/quran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Islamic study "
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"

                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
android:id="@+id/physics"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/physics"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Physics"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:id="@+id/chemistry"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/chemistry"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Chemistry"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck,TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:id="@+id/math"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="30dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/math"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Mathametics"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:id="@+id/english"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/english"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="English"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
android:id="@+id/computer"
                    android:layout_rowWeight="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/computer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Computer"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_marginTop="30dp"
                    android:layout_column="0"
android:id="@+id/bio"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/bio"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Biology"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
android:id="@+id/socialogy"
                    android:layout_marginTop="30dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/social"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Socialogy"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />







                    </LinearLayout>





                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:id="@+id/general"
                    android:layout_marginTop="30dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">


                    <LinearLayout
                        android:layout_width="106dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/zoo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Science"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />


                    </LinearLayout>





                </androidx.cardview.widget.CardView>


            </GridLayout>















        </LinearLayout>








    </ScrollView>